#!/usr/bin/env bash
# Clean containers and volumes (WARNING: Deletes all data)
set -e
echo "WARNING: This will remove all containers and volumes."
read -p "Are you sure? (y/N) " -n 1 -r
echo
if [[ $REPLY =~ ^[Yy]$ ]]; then
    docker-compose down -v
    echo "Cleaned containers and volumes."
else
    echo "Cancelled."
fi
